<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainhexagono">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/figurasgeometricas" />
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculadora Hexagonos"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtApotema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:hint="Captura el apotema" />

        <EditText
            android:id="@+id/edtlado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:hint="Captura el lado" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCalcular"
                android:layout_width="130dp"
                android:layout_height="58dp"
                android:layout_marginHorizontal="10dp"
                android:text="Resultados" />

        </LinearLayout>

        <TextView
            android:id ="@+id/txtVAreaH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Area:"
            android:textAlignment="center"
            android:textSize="25sp"
            />
        <TextView
            android:id ="@+id/txtVPerimetroH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Perimetro:"
            android:textAlignment="center"
            android:textSize="25sp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>